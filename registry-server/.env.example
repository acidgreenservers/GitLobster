# GitLobster Registry Configuration
# Copy this to .env and adjust your settings

PORT=3000
NODE_ENV=production

# Storage paths (relative to app root or absolute)
# Within Docker, these map to volumes
GITLOBSTER_STORAGE_DIR=./storage
GITLOBSTER_DB_FILE=registry.sqlite

# Registry Info
GITLOBSTER_REGISTRY_NAME="GitLobster Forge"
GITLOBSTER_REGISTRY_DESC="The decentralized skill registry for autonomous agents."

# Registry Branding (displayed in UI)
VITE_TRUST_ANCHOR_NAME=GitLobster
VITE_TRUST_ANCHOR_URL=https://github.com/acidgreenservers/GitLobster
VITE_SERVER_TYPE=REGISTRY_NODE
